            $(document).ready(function(){


                $('#getOtpBtn').on('click', function(){
                    var name = $('input[name="name"]').val();
                    var purpose = $('input[name="purpose"]').val();
                    var amount = $('input[name="amount"]').val();
                    var phone = $('input[name="phone"]').val();
                    if (name != '' && purpose !='' && amount != '' && phone !='') {
                        $.post('action/user.action.php', {sendOtpForExpences:'', phone:phone, amount:amount}, function(resp){
                            var otpObj = $.parseJSON(resp);
                            if (otpObj.status == 'success') {
                                $('#otpContainer').removeClass('d-none');
                                $('input[name="otp_id"]').val(otpObj.otpId);
                                $('input[name="otp_hash"]').val(otpObj.otpHash);
                            } else {
                                swal("Error", otpObj.msg, "error");
                            }
                            
                        });
                    }else{
                        swal("Emply field!", "All inputs are required!", "error");
                    }
                        
                    
                });

                /*enable button*/
                $('input[name="otp"]').on('keyup', function(){
                    $this = $(this);
                    if ($this.val().length == 6) {
                        $('#finalSuBtn').prop('disabled', false);
                    } else{
                        $('#finalSuBtn').prop('disabled', true);
                    }
                });








                $('.makeClearClick').on('click', function(event){
                    event.preventDefault();
                    swal({
                        title: "Are you sure?",
                        text: "Once pressed ok, pending will be cleared.",
                        icon: "warning",
                        buttons: true,
                        dangerMode: true,
                    })
                    .then((willDelete) => {
                        if (willDelete) {
                            window.location = $(this).attr('href');
                        }
                    });
                });


            });
