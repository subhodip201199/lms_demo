                        <script>
                            var student_id;
                            var student_class;
                            
                    
                             function submit() { 
                    
                                var formEl = document.forms.std_form;
                                var formData = new FormData(formEl);
                                student_id = formData.get('student_id');
                                
                               
                    
                                const url = "/search_students?student_id=" + student_id;
                                
                                if(!student_id){
                                    alert("Please fill this input!") 
                                } else {
                                fetch(url)
                                    .then(function (response) {
                                        return response.json();
                                    })
                                    .then(function (data) {
                                        $("#std_det tbody tr").remove(); 
                                        appendData(data);
                                    })
                                    .catch(function (err) {
                                        console.log('error: ' + err);
                                    });
                                }
                    
                                
                    
                                function appendData(data) {
                                    var mainContainer = document.getElementById("tbody");
                                    
                                    for (var i = 0; i < data.length; i++) {
                    
                                       
                    
                                        var id = data[i].student_id;
                                        
                    
                                        var div = document.createElement("tr");
                                        div.innerHTML = '<tr>' +
                                                            '<td>' +
                                                                '<a href="/student-profile?student_id=' + id + '"" style="color: green;">Make A Payment</a>' +
                                                            '</td>' +
                                                            '<td>' +
                                                                id +
                                                            '</td>' +
                                                            '<td>' + 
                                                                '<a href="/student-profile?student_id=' + id + '"" style="color: blue;">' + data[i].first_name + '&nbsp' + data[i].last_name + '</a>' +
                                                            '</td>' +
                                                            '<td>'+ 
                                                                data[i].student_class +
                                                            '</td>' +
                                                            '<td>' + 
                                                                data[i].session + 
                                                            '</td>' +
                                                            '<td>' + 
                                                                data[i].guardian_phone +
                                                            '</td>' +
                                                            '<td>' +
                                                                data[i].email +
                                                            '</td>' +
                                                        '</tr>' ;
                                        mainContainer.appendChild(div);


                                    }
                                }
                            }
                        
                                
                        </script>

