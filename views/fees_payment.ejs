                                    for(var i = 0; i <= emails.length-1; i++){
                                        link += "emails=" + emails[i];
                                        if(i < emails.length-1){
                                            link +=  "&";
                                        }
                                    }
                                    console.log(emails);
                                    console.log(link);
                                
                                    $(this).attr("href", link);
                                });
                            });
                        </script>


