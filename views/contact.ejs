                        <script>
                            var fname;
                            var lname;
                            
                    
                            function submit() { 
                    
                                var formEl = document.forms.contact;
                                var formData = new FormData(formEl);
                                fname = formData.get('fname');
                                lname = formData.get('lname');
                                
                    
                                //document.getElementById("date_time").innerHTML = "Date - " + date + "<br><br>";
                    
                    
                                const url = "/search_contact/getdata?fname="+fname+"&lname="+lname;
                                if(!fname && !lname){
                                alert("Please fill a input!")
                                } else {
                                fetch(url)
                                    .then(function (response) {
                                        return response.json();
                                    })
                                    .then(function (data) {
                                        $("#tbody tr").remove(); 
                                        appendData(data);
                                    })
                                    .catch(function (err) {
                                        console.log('error: ' + err);
                                    });
                                }
                    
                                
                    
                                
                            }

                            function appendData(data) {
                                    var mainContainer = document.getElementById("tbody");
                                    
                                    for (var i = 0; i < data.length; i++) {
                    
                                      
                    
                                         id = data[i].id;
                    
                                        var div = document.createElement("tr");
                                        div.innerHTML = '<tr>' +
                                                            '<td>' + id + '</td>' +
                                                            '<td>' + data[i].f_name + ' ' + data[i].l_name + '</td>' +
                                                            '<td>' + data[i].email + '</td>' +
                                                            '<td>' + data[i].number + '</td>' +
                                                            '<td>' + data[i].address + '</td>' +
                                                            '<td>' + '<button type="button" id="sendToSelected" class="btn btn-outline-dark waves-effect waves-light btn-sm m-1" data-toggle="modal" data-target="#mysms"> <i class="fa fa-envelope"></i>&nbsp;<span>Send SMS</span> </button>' + '</td>' +
                                                            '<td>' + '<button id="' + id + '" type="button" onclick="remove_contact(this.id)" class="btn btn-outline-danger btn-sm waves-effect waves-light m-1 pull-right" data-toggle="modal" data-target="#removeStudentPassModal"><i class="fa fa-trash mr-1"></i> REMOVE</button>' + '</td>' +
                                                        '</tr>' ;
                                        mainContainer.appendChild(div);
                    
                                    }
                                }

                            function remove_contact(clicked_id) {
                                const url2 = "/contact/remove?id=" + clicked_id;
                    
