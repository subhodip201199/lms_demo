        <script>
            var total_number = 100;
            $(document).ready(function(){

                $('#msgHolder').keyup(function(){
                    var text_ch = $(this).val();
                    var count = text_ch.length;
                    if (count < 161) {
                        var sms_cost = 1;
                    } else if (count > 160 && count < 307) {
                        var sms_cost = 2;
                    } else{
                        var sms_cost = 3;
                    }
                    var total_cost = total_number * sms_cost;
                    $('#countChr').text('Characters: '+count+', SMS Cost: '+sms_cost+', Total Cost: '+total_cost);
                });


                $('#sendSmsForm').on('submit', function(){
                    $('#loader').show();
                    setTimeout(function() {
                        $('.loading_text').text('SMS sending in progress..');
                    }, 3000);
                });
                
            });
